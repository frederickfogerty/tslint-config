{
	"extends": [
		"tslint",
		"tslint-microsoft-contrib",
		"tslint-config-xo/esnext",
		"tslint-react"
	],
	"rules": {
		"array-type": [
			true,
			"array"
		],
		// Tabs.
		"indent": [
			"tab"
		],
		"no-consecutive-blank-lines": [
			false
		],
		"object-literal-sort-keys": false,
		"quotemark": [
			true,
			"single"
		],
		"no-shadowed-variable": false,
		"ordered-imports": [
			false
		],
		"only-arrow-functions": [
			false
		],
		"object-literal-shorthand": false,
		"object-literal-key-quotes": [
			false
		],
		"interface-over-type-literal": false,
		"no-empty-interface": false,
		"no-empty-interfaces": false,
		"no-for-in-array": false,
		"restrict-plus-operands": false,
		"triple-equals": [
			true,
			"allow-null-check",
			"allow-undefined-check"
		],
		"variable-name": [
			true,
			"check-format",
			"allow-pascal-case",
			"ban-keywords"
		],
		// Nope.
		"import-name": false,
		"missing-jsdoc": false,
		"no-stateless-class": false,
		"no-relative-imports": false,
		"no-reserved-keywords": false,
		"no-use-before-declare": false,
		"no-multiline-string": false,
		"export-name": false,
		"prefer-type-cast": false,
		"typedef": [
			false
		],
		// Should have, but cause so many errors or don't support quick-fix
		"jsx-alignment": false,
		"react-tsx-curly-spacing": false,
		"no-any": false,
		"no-extra-semi": false,
		"react-a11y-img-has-alt": false,
		"no-unnecessary-semicolons": false,
		"comment-format": [
			false
		],
		"insecure-random": false,
		// React
		"jsx-curly-spacing": [
			true,
			"always"
		],
		"jsx-no-lambda": true,
		"jsx-no-multiline-js": true,
		"jsx-no-string-ref": true,
		"jsx-self-close": true,
		"react-a11y-event-has-role": false,
		// Deprecated
		"no-unused-variable": false,
		// TEMP
		"object-curly-spacing": false
	}
}
